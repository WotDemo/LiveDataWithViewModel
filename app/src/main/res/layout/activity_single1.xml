<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:id="@+id/single1_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="SingleActivity1"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/single1_activity_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/single1_activity_refresh"
        android:layout_below="@+id/single1_activity_title"
        android:gravity="center"
        android:text="点击按钮更新数据" />

    <Button
        android:id="@+id/single1_activity_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/single1_activity_next"
        android:text="更新数据" />

    <Button
        android:id="@+id/single1_activity_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:text="下一页" />
</RelativeLayout>